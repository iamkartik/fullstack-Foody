mixin storeCard(store = {})
    .store
        .store_hero
            .store__actions
                button soon
            img(src=`/uploads/${store.photo || 'store.png'}`)
            h2.title
                a(href=`/stores/${store.slug}`) #{store.name}
        .store__details
            // slice to keep description to 25 words atmost
            p= store.description.split(' ').slice(0,25).join(' ')        